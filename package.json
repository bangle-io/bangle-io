{
  "name": "bangle-io",
  "version": "1.0.0--alpha.0",
  "homepage": "https://bangle.io",
  "authors": [
    {
      "name": "Kushan Joshi",
      "email": "0o3ko0@gmail.com",
      "web": "http://github.com/kepta"
    }
  ],
  "bugs": {
    "url": "https://github.com/bangle-io/bangle-io/issues"
  },
  "private": true,
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "quoteProps": "consistent",
    "arrowParens": "always",
    "printWidth": 80
  },
  "license": "AGPL-3.0-or-later",
  "lint-staged": {
    "*.md": "yarn prettier --write",
    "{app,extensions,js-lib,lib,tooling,worker}/**/*.{js,ts,jsx,tsx}": [
      "yarn prettier --write"
    ],
    "*.css": [
      "yarn g:css:stylelint-update-regex",
      "yarn stylelint --fix --allow-empty-input",
      "yarn prettier --write"
    ],
    "*.json": "yarn prettier --write"
  },
  "devDependencies": {
    "@eslint/js": "^8.52.0",
    "@swc/jest": "^0.2.29",
    "@types/eslint": "^8",
    "@types/eslint__js": "^8",
    "@types/jest": "^29.5.3",
    "@types/wicg-file-system-access": "^2020.9.5",
    "@typescript-eslint/eslint-plugin": "^6.9.0",
    "@typescript-eslint/parser": "^6.9.0",
    "eslint": "^8.52.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "globals": "^13.23.0",
    "jest": "^29.7.0",
    "prettier": "3.0.3",
    "typescript": "^5.2.2",
    "@bangle.io/jsdom-env": "workspace:*",
    "bangle-io-help": "^1.11.0",
    "ts-node": "^10.9.1",
    "unocss": "^0.53.6",
    "@bangle.io/uno-preset-bangle": "workspace:*"
  },
  "scripts": {
    "build-prod-serve": "pnpm run generate-all && pnpm -r --filter \"app-root\" run build-prod-serve",
    "build": "pnpm run generate-all && pnpm -r --filter \"app-root\" run build",
    "generate-all": "pnpm -r run \"/^generate:.*/\"",
    "lint:js": "ESLINT_USE_FLAT_CONFIG=true eslint .",
    "lint:type": "tsc -b",
    "lint": "pnpm run \"/^lint:.*/\"",
    "start": "pnpm run generate-all && pnpm -r --filter \"app-root\" run start",
    "test:ci": "pnpm jest --maxWorkers=2",
    "test:constraints": "pnpm -r run \"/^cscript:.*/\"",
    "test:e2e-ui": "pnpm -r --filter e2e-tests e2e --ui",
    "test:e2e": "pnpm -r --filter e2e-tests e2e",
    "test": "pnpm jest && pnpm run test:constraints"
  }
}
