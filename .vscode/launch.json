{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Src unit Tests",
            "type": "node",
            "request": "launch",
            "runtimeArgs": [
                "--inspect-brk",
                "${workspaceRoot}/node_modules/.bin/jest",
                "src",
                "--runInBand"
            ],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "port": 9229
        },
        {
            "name": "Debug current file",
            "type": "node",
            "request": "launch",
            "runtimeVersion": "18.7.0",
            "runtimeExecutable": "yarn",
            "skipFiles": [
                "<node_internals>/**",
                "node_modules/**"
            ],
            "runtimeArgs": [
                "--inspect-brk",
                "jest",
                "${fileBasenameNoExtension}",
                "--runInBand",
                "--debug",
                "--testTimeout=60000"
            ],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "port": 9229
        }
    ]
}